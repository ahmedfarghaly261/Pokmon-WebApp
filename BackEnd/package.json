{
  "name": "pokedex-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' -r tsconfig-paths/register src/main.ts",
    "migrate": "ts-node -r tsconfig-paths/register src/cli/run-migrations.ts",
    "typeorm:migrate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d src/database/data-source.ts",
    "import:seed": "ts-node -r tsconfig-paths/register src/cli/import.seed.ts",
    "import:pokemon": "ts-node -r tsconfig-paths/register src/cli/import.pokemon.ts",
    "build": "tsc -p tsconfig.json"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^9.0.0",
    "axios": "^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.9.0"
  }
}
